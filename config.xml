<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "ch.unifr.nte.bibup"
        versionCode = "2"
        version     = "2.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>BibUp</name>

    <description>
        BibUp.
    </description>

    <author href="https://nte.unifr.ch" email="nte@unifr.ch">
        Centre NTE, Universit√© de Fribourg.
    </author>

    <icon src="res/icon.png" />

    <gap:platform name="ios" />
    <gap:platform name="android" />

    <gap:splash gap:platform="android" src="res/screens/splash.png" />
    <gap:splash gap:platform="ios" src="res/screens/splash.png" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="3000" />

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" /> <!-- only if StatusBarOverlaysWebView is false -->
    <preference name="StatusBarStyle" value="lightcontent" /> <!-- default, lightcontent, blacktranslucent, blackopaque -->
    

    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="com.phonegap.plugins.barcodescanner" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.statusbar" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.splashscreen" />

    <access origin="*" />
</widget>
